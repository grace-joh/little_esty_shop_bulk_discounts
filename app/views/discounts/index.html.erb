<%= render partial: './merchant_nav_bar' %>

<div class="row">
  <p class='col-12'>My Discounts</p>
</div>

<% @merchant.discounts.each do |discount| %>
  <div id="discount-<%= discount.id %>">
    <p>
      <%= link_to "Discount ##{discount.id}", merchant_discount_path(@merchant, discount) %> - <%= discount.description %>
      <%= button_to 'Delete', merchant_discount_path(@merchant, discount), method: :delete %>
    </p>
  </div>
<% end %>
<br>
<br>

<%= link_to "Create a new discount", new_merchant_discount_path(@merchant) %>

<div id="holidays">
  <div class="row">
    <p class='col-12'>Upcoming Holidays</p>
  </div>

  <ul>
    <% @holidays.each do |holiday| %>
        <li><%= holiday.name %></li>
    <% end %>
  <ul>
</div>